%body
  %header.navbar.navbar-default
    .container-fluid
      .container
        %nav
          %ul.nav.navbar-nav.navbar-right
            %li= link_to t('header.home'), root_path
            %li= link_to t('header.help'), '#'
            - if signed_in?
              %li.dropdown
                %a.dropdown-toggle{ 'data-toggle': 'dropdown', href: '#' }
                  = t('header.friends')
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to t('header.show_friends'), friends_path
                  %li= link_to t('header.find_friends'), new_friend_path
                  %li.divider
                  %li
                    = link_to t('header.pending_requests'), friendship_requests_path(pending: true)
                  %li
                    = link_to t('header.your_requests'), friendship_requests_path
              %li.dropdown
                %a.dropdown-toggle{ 'data-toggle': 'dropdown', href: '#' }
                  = t('header.account')
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to t('header.profile'), edit_user_registration_path
                  %li= link_to t('header.settings'), '#'
                  %li.divider
                  %li
                    = link_to t('header.sign_out'), destroy_user_session_path, method: 'delete'
            - else
              %li= link_to t('header.sign_in'), new_user_session_path
