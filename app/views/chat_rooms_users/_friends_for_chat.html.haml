- @users.each do |user|
  -# TODO add class "add-friend-to-chat" to this form and set ajax requests
  = bootstrap_form_tag(url: create_user_chat_room_path(@chat_room, user), class: 'add-friend-to-chat', method: :post) do
    = render partial: 'users/user', locals: { user: user}
    = submit_tag('Add to chat', class: 'btn btn-primary btn-sm')
    = link_to 'User info', user_path(user), class: 'btn btn-primary btn-sm'
